<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <LinearLayout
        android:id="@+id/laayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="@id/layoutBody">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back2" />

        <ImageView
            android:id="@+id/logoutImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:background="@drawable/header_background"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="306dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnImageGallery"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/buttonstylegradient"
                android:fontFamily="@font/numans"
                android:text="SELECT IMAGE"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="#9FD8DF"
                android:textSize="12sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/buttonstylegradient"
                android:fontFamily="@font/numans"
                android:gravity="right"
                android:text="UPLOAD IMAGES"
                android:textColor="@color/white"
                android:textColorHint="#9FD8DF"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnRetrieve"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/buttonstylegradient"
                android:fontFamily="@font/numans"
                android:gravity="left"
                android:text="RETRIEVE IMAGES"
                android:textColor="@color/white"
                android:textColorHint="#9FD8DF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/buttonstylegradient"
                android:fontFamily="@font/numans"
                android:gravity="right"
                android:text="DELETE IMAGES"
                android:textColor="@color/white"
                android:textColorHint="#9FD8DF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>